#!/usr/bin/env python3
"""
Taxedo - Professional Form16 Extraction and Tax Calculation Tool

A comprehensive CLI tool for Indian Form16 PDF processing and tax calculations.
Supports multi-year calculations, regime comparison, and programmatic API access.
"""

import sys
import os
from pathlib import Path

# Add the package directory to Python path
package_dir = Path(__file__).parent
sys.path.insert(0, str(package_dir))

# Import and run the CLI
from cli import Form16CLI

def main():
    """Main entry point for the taxedo command."""
    cli = Form16CLI()
    return cli.main()

if __name__ == "__main__":
    sys.exit(main())